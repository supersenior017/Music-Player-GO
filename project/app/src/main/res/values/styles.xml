<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="indicatorFastScrollerStyle">@style/FastScrollerColorFull</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="md_font_title">@font/raleway_black</item>
        <item name="md_background_color">@color/windowBackground</item>
        <item name="alertDialogTheme">@style/DialogsStyle</item>
        <item name="preferenceTheme">@style/PrefTheme</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="PrefTheme" parent="PreferenceThemeOverlay">
        <item name="android:scrollbars">none</item>
    </style>

    <style name="DialogsStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="dialogCornerRadius">@dimen/md_corner_radius</item>
        <item name="android:background">@color/windowBackground</item>
        <item name="android:windowTitleStyle">@style/DialogsStyle.Title</item>
        <item name="colorAccent">?attr/colorControlNormal</item>
    </style>

    <style name="DialogsStyle.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/raleway_black</item>
    </style>

    <!-- Indicator text style -->
    <style name="FastScrollerColorFull" parent="Widget.IndicatorFastScroll.FastScroller">
        <item name="android:textColor">@color/pressed_selector</item>
        <item name="android:textAppearance">@style/FastScrollerTextStyle</item>
    </style>

    <style name="FastScrollerTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <!-- Indicator thumb text style -->
    <style name="IndicatorThumbTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/raleway_black</item>
    </style>

    <!-- This will set the fade in animation on all the activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Style for search bar -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <!-- Style for search view -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@drawable/ic_round_search</item>
        <item name="closeIcon">@drawable/ic_round_close_red</item>
    </style>

    <style name="ToolbarStyle.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/raleway_black</item>
    </style>

    <style name="ToolbarStyle.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/raleway</item>
    </style>
</resources>
