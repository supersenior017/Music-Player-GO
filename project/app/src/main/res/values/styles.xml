<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:typeface">sans</item>
        <item name="icon_color">@android:color/black</item>
        <item name="card_color">@color/grey_100</item>
        <item name="theme_icon">@drawable/ic_theme_dark_24dp</item>
        <item name="android:navigationBarColor">@color/grey_900</item>
    </style>

    <style name="AppThemeDark" parent="android:Theme.Material.NoActionBar">
        <item name="android:typeface">sans</item>
        <item name="icon_color">@android:color/white</item>
        <item name="card_color">@color/grey_800</item>
        <item name="theme_icon">@drawable/ic_theme_light_24dp</item>
        <item name="android:windowBackground">@color/grey_900</item>
        <item name="android:navigationBarColor">@color/grey_900</item>
    </style>
</resources>
